<p style="color: green"><%= notice %></p>
<div class="container">
  <h1 class="title">Styles</h1>

  <%= form_with(url: styles_path, method: :get, data: {controller: "search-form", turbo_frame: "styles", turbo_action: "advance"}) do |form| %>
    <%= form.label :query, "recherche par nom:", class: "subtitle" %>
    <div class="">
      <%= form.text_field :query, class: "", id: "search", data: {action: "input->search-form#search"} %>
      <%= form.submit 'Search', class: "" %>
    </div>
  <% end %>

  <!-- render new partial here -->
  <div class="">
    <%= render "styles", styles: @styles %>
  </div>

  <%= link_to "New style", new_style_path, class: "" %>
</div>

