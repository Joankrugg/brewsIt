<div class="background-wrapper">
  <div class="background-styles"></div>
</div>
<div class="page">
  <h1 class="title">Styles</h1>
  <p style="color: green"><%= notice %></p>
  <%= form_with(url: styles_path, method: :get, data: {controller: "search-form", turbo_frame: "styles", turbo_action: "advance"}) do |form| %>
    <%= form.label :query, "Recherche par mots clÃ©s:", class: "subtitle" %>
    <div class="actions">
      <div class="first">
        <%= form.text_field :query, class: "search-input", id: "search", data: {action: "input->search-form#search"} %>
        <%= form.submit 'Go !', class: "search-button" %>
      </div>
    </div>
  <% end %>
  <div class="second">
    <%= link_to "Ajouter un style", new_style_path, class: "create" %>
  </div>
</div>
<div class="content-container">
  <div class="content">
    <%= render "styles", styles: @styles %>
  </div>
</div>

