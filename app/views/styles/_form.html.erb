<div class="background-wrapper">
  <div class="background-styles"></div>
</div>
<div class="content-container">
  <div class="content">
    <div class="row">
      <div class="col-lg-6 mx-auto wall">
        <h2>Style</h2>
        <%= simple_form_for @style do |f|%>
          <div class="form-inputs">
            <div class="row">
              <div class="col-lg-6">
                <%= f.input :photo %>
              </div>
              <div class="col-lg-6">
                <%= f.input :name %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <%= f.association :color %>
              </div>
              <div class="col-lg-6">
                <%= f.association :yeast %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-3">
                <%= f.association :taste %>
              </div>
              <div class="col-lg-3">
                <%= f.input :level_min %>
              </div>
              <div class="col-lg-3">
                <%= f.input :level_max %>
              </div>
            </div>
            <%= f.association :textures, as: :check_boxes, required: false,
                            input_html: { class: "squaretag-selector" },
                            item_wrapper_class: 'squaretag-item' %>
            <%= f.association :flavours, as: :check_boxes, required: false,
                            input_html: { class: "squaretag-selector" },
                            item_wrapper_class: 'squaretag-item' %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Créér un style", class: 'action-btn' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
