<div id="<%= dom_id beer %>">
  <%= link_to beer_path(beer), data: { turbo: false } do %>
    <div class="row line">
      <div class="col-2">
        <% if beer.photo.present? %>
          <%=cl_image_tag beer.photo.key, height: 30, width: 30, crop: :fill, class: "img-fluid" %>
        <% end %>
      </div>
      <div class="col-2">
        <% if beer.name.present? %>
          <%=beer.name%>
        <% end %>
      </div>
      <div class="col-2">
        <% if beer.yeast.present? %>
          <%=beer.yeast.name%>
        <% end %>
      </div>
      <div class="col-2">
        <% if beer.color.present? %>
          <%=beer.color.name%>
        <% end %>
      </div>
      <div class="col-2">
        <% if beer.level.present? %>
          <%=beer.level%> %
        <% end %>
      </div>
      <div class="col-2">
        <% if beer.taste.present? %>
          <%=beer.taste.name%>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

