<div id="<%= dom_id beer %>">
  <div class="row line align-items-center">
    <div class="col-1 d-none d-lg-block">
      <% if beer.photo.present? %>
        <%= cl_image_tag beer.photo.key, height: 30, width: 30, crop: :fill, class: "img-fluid thumbnail" %>
      <% end %>
    </div>
    <div class="col-6 col-lg-2">
      <%= link_to beer_path(beer), data: { turbo: false } do %>
        <% if beer.name.present? %>
          <% if beer.name.length > 20 %>
            <p><%= "#{beer.name[0, 20]}..."%></p>
          <% else %>
            <p><%= beer.name %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="col-2">
      <%= link_to beer_path(beer), data: { turbo: false } do %>
        <% if beer.yeast.present? %>
          <% if beer.yeast.name.length > 5 %>
            <p><%= "#{beer.yeast.name[0, 5]}..."%></p>
          <% else %>
            <p><%= beer.yeast.name %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="col-2">
      <%= link_to beer_path(beer), data: { turbo: false } do %>
        <% if beer.color.present? %>
          <p><%=beer.color.name %></p>
        <% end %>
      <% end %>
    </div>
    <div class="col-2">
      <%= link_to beer_path(beer), data: { turbo: false } do %>
        <% if beer.level.present? %>
          <p><%=beer.level %> % </p>
        <% end %>
      <% end %>
    </div>
    <div class="col-2 d-none d-lg-block">
      <%= link_to beer_path(beer), data: { turbo: false } do %>
        <% if beer.taste.present? %>
          <p><%=beer.taste.name %></p>
        <% end %>
      <% end %>
    </div>
    <div class="col-1 d-none d-lg-block">
      <%= link_to beer_path(beer), data: { turbo: false } do %>
        <i class="fa-solid fa-square-caret-right"></i>
      <% end %>
    </div>
  </div>
</div>

