<div class="background-wrapper">
  <div class="background">
    <div class="page">
      <h1 class="title">Beers</h1>
      <p style="color: green"><%= notice %></p>
      <%= form_with(url: beers_path, method: :get, data: {controller: "search-form", turbo_frame: "beers", turbo_action: "advance"}) do |form| %>
        <%= form.label :query, "recherche par nom:", class: "subtitle" %>
        <div class="">
          <%= form.text_field :query, class: "", id: "search", data: {action: "input->search-form#search"} %>
          <%= form.submit 'Search', class: "" %>
        </div>
      <% end %>
      <%= link_to "New beer", new_beer_path, class: "" %>
    </div>
  </div>
</div>
  <div class="content-container">
    <div class="content">
      <%= render "beers", beers: @beers %>
    </div>
  </div>
</div>
