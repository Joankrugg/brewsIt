<div id="<%= dom_id spot %>">
  <%= link_to spot_path(spot), data: { turbo: false } do %>
    <div class="row line">
      <div class="col-5">
        <% if spot.type.present? && spot.name.present? %>
          <% if spot.type.name == 'Brasserie' %>
            <p>Brasserie <%= spot.name %></p>
          <% else %>
            <%= spot.name %>
          <% end %>
        <% end %>
      </div>
      <div class="col-2">
        <% if spot.city.present? %>
          <p><%= spot.city %></p>
        <% end %>
      </div>

      <div class="col-2">
        <% if spot.active.present? %>
          <p><%=spot.active%></p>
        <% end %>
      </div>
      <div class="col-1">
        <i class="fa-solid fa-square-caret-right"></i>
      </div>
    </div>
  <% end %>
</div>
