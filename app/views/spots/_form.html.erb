<div class="background-wrapper">
  <div class="background-spots"></div>
</div>
<div class="content-container">
  <div class="content">
    <div class="row">
      <div class="col-lg-6 mx-auto wall">
        <h2>Nouveau spot</h2>
        <%= simple_form_for @spot, data: {turbo: false} do |f|%>
          <div class="form-inputs">
            <div class="row">
              <div class="col-lg-6">
                <%= f.input :name, label: "Nom", required: false  %>
              </div>
              <div class="col-lg-6">
                <%= f.input :city, label: "Ville", required: false %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <%= f.input :address, label: "Adresse", required: false %>
              </div>
              <div class="col-lg-6">
                <%= f.association :type, required: false %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <%= f.input :zipcode, label: "code postal", required: false %>
              </div>
              <div class="col-lg-6">
                <%= f.input :active, label: "Actif", as: :radio_buttons %>
              </div>

            </div>
            <div class="row">
              <div class="col-lg-12">
                <%= f.input :website, label: "site web", required: false %>
              </div>
            </div>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "CrÃ©er un spot", class: 'action-btn' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
