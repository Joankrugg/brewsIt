  <div class="row">
    <div class='col-6'>
      <%= form.input :snack, as: :boolean, input_html: { data: { action: "change->specificity#submitForm" }, checked: specificity.snack, class: "toggle" }, label_html: { class: 'custom-label' }, label: 'Fingerfood' %>
    </div>
    <div class='col-6'>
      <%= form.input :happy_hour, as: :boolean, input_html: { data: { action: "change->specificity#submitForm" }, checked: specificity.happy_hour, class: "toggle" }, label_html: { class: 'custom-label' } %>
    </div>
  </div>
  <div class="row">
    <div class='col-6'>
      <%= form.input :cheapest_beer, input_html: { step: 0.01, data: { action: "change->specificity#submitForm" }, value: specificity.cheapest_beer }, label: 'Prix de la pinte la moins chÃ¨re'  %>
    </div>
    <div class='col-6'>
    <%= form.input :draft_number, as: :integer, input_html: { data: { action: "change->specificity#submitForm" }, value: specificity.draft_number } , label: 'Nombre de tireuses' %>
    </div>
  </div>
  <div class="row">
    <div class='col-8'>
    </div>
