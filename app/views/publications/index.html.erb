<div class="background-wrapper">
  <div class="background-moods"></div>
</div>
<div class="page">
  <h1 class="title">Publications</h1>
  <p style="color: green"><%= notice %></p>
  <%= form_with(url: publications_path, method: :get, data: {controller: "search-form", turbo_frame: "publications", turbo_action: "advance"}) do |form| %>
    <%= form.label :query, "Recherche", class: "subtitle" %>
    <div class="actions">
      <div class="first">
        <%= form.text_field :query, class: "search-input", id: "search", data: {action: "input->search-form#search"} %>
        <%= form.submit 'Go !', class: "search-button" %>
      </div>
    </div>
  <% end %>
  <div class="second">
    <%= link_to "Ajouter une publication", new_publication_path, class: "create" %>
  </div>
</div>
<div class="content-container">
  <div class="content">
    <%= render "publications", publications: @publications %>
  </div>
</div>
